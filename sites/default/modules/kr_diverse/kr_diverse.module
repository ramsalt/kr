function kr_div_forside_clear($form_id, $form_values){

  dmemcache_flush();
  db_query("DELETE FROM {views_content_cache}");
  db_query("DELETE FROM {cache_views}");
  db_query("DELETE FROM {cache_views_data}");
  db_query("DELETE FROM {cache_page}");
  cache_clear_all();
}
