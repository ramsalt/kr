function kr_diverse_apachesolr_query_prepare($query){
	global $user;
	if($user->uid == 1){
		dsm($query);
	}
	$query->setSolrsort('ds_created', 'desc');
	//$query->operator = 'AND';
}
function kr_diverse_apachesolr_query_alter($query) {
	global $user;
	if($user->uid == 1){
		dsm(array($query, $query->getParams(), $query->getSolrParams()));
	}
	$query->addParam('mm', 1);
	$query->params['mm'] = '1';
}
